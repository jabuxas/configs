{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "cssPriority": "user",
  "control-center-margin-top": 8,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 8,
  "control-center-margin-left": 0,
  "control-center-width": 320,
  "control-center-height": 600,

  "notification-window-width": 350,
  "notification-icon-size": 30,
  "notification-body-image-height": 100,
  "notification-body-image-width": 220,

  "timeout": 3,
  "timeout-low": 2,
  "timeout-critical": 6,
  "fit-to-screen": false,

  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": ["mpris", "backlight", "volume", "dnd", "title", "notifications" ],

  "notification-visibility": {
    "example-name": {
      "state": "muted",
      "urgency": "Low",
      "app-name": "Spotify"
    }
  },

  "widget-config": {
    "title": {
      "text": " Notifications",
      "clear-all-button": true,
      "button-text": ""
    },
    "dnd": {
      "text": " DND"
    },
    "mpris": {
      "image-size": 60,
      "image-radius": 12,
      "autohide": true,
      "loop-carousel": true,
      "show-album-art": "when-available"
    },
    "backlight": {
      "label": "󰃞 ",
      "device": "amdgpu_bl1"
    },
    "volume": {
      "label": " ",
      "show-per-app": true
    }
  }
}
